<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="reactivecircus.blueprint">

    <application
        android:name="reactivecircus.blueprint.demo.BlueprintCoroutinesDemoApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Blueprint.DayNight">

        <activity android:name="reactivecircus.blueprint.demo.noteslist.CoroutinesNotesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="reactivecircus.blueprint.demo.enternote.CoroutinesEnterNoteActivity"
            android:windowSoftInputMode="adjustResize" />

    </application>

</manifest>
